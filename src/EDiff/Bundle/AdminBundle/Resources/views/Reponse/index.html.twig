<h1>Reponse list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>Bonne_ou_mauvaise</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('reponse_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.libelle }}</td>
            <td>
            	{% if entity.bonneoumauvaise == 1 %}
            	Bonne réponse
            	{% else %}
				Mauvaise réponse
				{% endif %}
            </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('reponse_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('reponse_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('reponse_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
