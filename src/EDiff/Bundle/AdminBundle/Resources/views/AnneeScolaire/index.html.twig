{# src/EDiff/Bundle/AdminBundle/Resources/views/AnneeScolaire/index.html.twig #}

{% extends "EDiffAdminBundle::layout_admin.html.twig" %}

{% block title %}{{ parent() }} | Année scolaire{% endblock %}

{% block body %}
    <div class="hero-unit utilisateur">
		<h1>Liste des années scolaires</h1>
		
		{% if delete %}
			<div class="alert alert-error">
				<button class="close" data-dismiss="alert" type="button">×</button>
				Votre année scolaire a bien été supprimée !
			</div>
		{% endif %}
		
		{% if entities|length > 0 %}
		<table class="table-bordered table">
		    <thead>
		        <tr>
		            <th>Date de début</th>
		            <th>Date de fin</th>
		            <th>Actions</th>
		        </tr>
		    </thead>
		    <tbody>
		    {% for entity in entities %}
		        <tr>
		            <td>{{ entity.datedebut|date('d-m-Y')}}</td>
		            <td>{{ entity.datefin|date('d-m-Y')}}</td>
		            <td>
		            	<a class="btn btn btn-small" href="{{ path('anneescolaire_show', { 'id': entity.id }) }}">Voir</a>
		                <a class="btn btn btn-small" href="{{ path('anneescolaire_edit', { 'id': entity.id }) }}">Modifier</a>
		            </td>
		        </tr>
		    {% endfor %}
		    </tbody>
		</table>
		{% else %} 
		Aucune année scolaire </br>
		{% endif %}
		
		</br>
		
		<p>
	        <a class="btn btn-primary" href="{{ path('anneescolaire_new') }}">
	            Création d'une nouvelle année scolaire
	        </a>
		</p>

	</div>
{% endblock %}