<h1>Questionnaire list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Statut</th>
            <th>Nb_questions_a_repondre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('questionnaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titre }}</td>
            <td>{{ entity.statut }}</td>
            <td>{{ entity.nbquestionsarepondre }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('questionnaire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('questionnaire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('questionnaire_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
